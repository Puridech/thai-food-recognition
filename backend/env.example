# Thai Food Recognition Backend Configuration
# Copy this file to .env and adjust values as needed

# ==================== Server Settings ====================
HOST=0.0.0.0
PORT=8000
RELOAD=True
LOG_LEVEL=info

# ==================== Model Settings ====================
# Layer 1 (Pre-trained)
LAYER1_MODEL_PATH=models/layer1_pretrained
LAYER1_CONFIDENCE_THRESHOLD=0.80

# Layer 2 (Fine-tuned)
LAYER2_MODEL_PATH=models/layer2_finetuned
LAYER2_MODEL_NAME=clip-vit-base-patch32

# ==================== Data Paths ====================
KNOWLEDGE_BASE_PATH=data/foods
RESTAURANT_DATA_PATH=data/restaurants/thai_restaurants.json

# ==================== Upload Settings ====================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.webp

# ==================== Performance ====================
MAX_WORKERS=4
BATCH_SIZE=1
DEVICE=cuda  # or 'cpu' if no GPU
